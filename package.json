{
  "name": "ciat-root",
  "private": true,
  "scripts": {
    "postinstall": "cd backend && npm install && cd ../frontend && npm install",
    "api": "cd backend && npm run api",
    "web": "cd frontend && npm run dev",
    "dev": "concurrently -n api,web,watch -c green,cyan,yellow \"npm:api\" \"npm:web\" \"npm:watch\"",
    "reapply": "cd backend && npm run reapply",
    "db": "cd backend && npm run db",
    "watch": "cd backend && npm run db watch"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1"
  }
}
